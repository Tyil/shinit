#!/usr/bin/perl6
use v6.c;
use lib "/opt/shinit/lib";
use Shinit;

sub MAIN() {
  my $init = Shinit.new;
  $init.run;
}

CATCH {
  default {
    say "We just fully died, here is the stacktrace:";
    say .backtrace;
    say "\nNow have fun playing around in bash";
    run '/usr/bin/bash';
    .resume;
  }
}
